            {
                "name": "Normal",
                "value": "normal"
            },
            {
                "name": "No Wrap",
                "value": "nowrap"
            },
            {
                "name": "Whitespace preserved and wraps on line breaks",
                "value": "pre"
            },
            {
                "name": "Whitespace preserved and collapse on single whitespace",
                "value": "pre-line"
            },
            {
                "name": "Whitespace preserved and wraps when necessary",
                "value": "pre-wrap"
            },
            {
                "name": "Default value",
                "value": "initial"
            },
            {
                "name": "Inherit from parent",
                "value": "inherit"
            }
          ]
        }
      ]
    },
